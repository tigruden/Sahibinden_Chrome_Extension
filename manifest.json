{
  "manifest_version": 3,
  "name": "Emlak Crawler",
  "version": "1.0",
  "description": "Emlak ilanlarını kolayca tarayın ve yönetin.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.sahibinden.com/*",
    "https://www.hepsiemlak.com/*",
    "https://www.emlakjet.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  }
}
